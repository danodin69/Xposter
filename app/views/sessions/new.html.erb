<h1> Sign In </h2>

<%= form_with url: sign_in_path do |form|%>
<div class="mb-3">
        <%=form.label :email %>
        <%= form.text_field :email, class:"form-control", placeholder: "banana@monkey.com" %>
    </div>
    <div class="mb-3">
        <%=form.label :password %>
        <%= form.password_field :password , class:"form-control", placeholder: "password/123" %>
        <%= link_to "Forgot Password?", edit_password_reset_path%>
    </div>
    <div class="mb-3">
    <%= form.submit "Sign In", data: { turbo_frame: 'signin_frame'},class:"btn btn-success"%>
    </div>

<%end%>